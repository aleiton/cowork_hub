# =============================================================================
# ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
#
# Copy this file to .env and update the values.
# NEVER commit .env to version control!
#
# =============================================================================

# Database
DATABASE_URL=postgres://localhost/cowork_hub_development

# Redis (for Sidekiq)
REDIS_URL=redis://localhost:6379/0

# Devise JWT Secret (generate with: rails secret)
DEVISE_JWT_SECRET_KEY=your-super-secret-jwt-key-at-least-64-characters-long-change-in-production

# Devise Pepper (generate with: rails secret)
DEVISE_PEPPER=your-pepper-value-for-password-hashing-change-in-production

# Rails
RAILS_ENV=development
RAILS_LOG_LEVEL=debug

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# Application Host (for emails)
APPLICATION_HOST=localhost:3000
