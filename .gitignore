# =============================================================================
# GIT IGNORE
# =============================================================================

# Environment variables (NEVER commit secrets!)
.env
.env.local
.env.*.local

# Ruby/Bundler
/.bundle
/vendor/bundle

# Rails
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep
/storage/*
!/storage/.keep
/public/assets

# Database
/db/*.sqlite3
/db/*.sqlite3-*

# Testing
/coverage/

# Node
/node_modules
frontend/node_modules

# Next.js Frontend
frontend/.next
frontend/out
frontend/.vercel
frontend/*.tsbuildinfo

# IDE
.idea/
.vscode/
*.swp
*.swo
*~

# macOS
.DS_Store

# Credentials (keep master.key out of git)
/config/master.key
/config/credentials/*.key

# Ignore pid files
/tmp/pids/*

# Ignore uploaded files in development
/storage/*
!/storage/.keep

# Bootsnap cache
/tmp/cache/bootsnap*

# Byebug history
.byebug_history

# RSpec failure tracking
spec/examples.txt
